    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
    
        {
            "name": "Launch Auto Connect Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/example/autoclient",
            "cwd": "${workspaceFolder}/bin",
            "console": "integratedTerminal"
        },

        {
            "name": "Launch GNET Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/example/clientgnet",
            "cwd": "${workspaceFolder}/bin",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Echo Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/example/echoServer",
            "cwd": "${workspaceFolder}/bin",
            "console": "integratedTerminal"
        }
    
    ]
}